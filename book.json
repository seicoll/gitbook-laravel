{
    "title": "Laravel",
    "author": "Sergi Coll",
    "language": "ca",
    "plugins": [
        "etoc",
        "-highlight",
        "sunlight-highlighter",
        "back-to-top-button",
        "page-toc"
    ],
    "styles": {
        "pdf": "./styles/pdf.css",
        "website": "./styles/website.css"
    },
    "pluginsConfig": {
        "etoc": {
            "mindepth": 2,
            "maxdepth": 4,
            "notoc": false
        },
        "theme-default": {
            "showLevel": true,
            "showPartLevel": false
        },
        "sunlight-highlighter": {
            "theme": "gitbook",
            "lineNumber": false
         },
         "page-toc":{
             "selector": ".markdown-section h1, .markdown-section h2, .markdown-section h3, .markdown-section h4",
             "position": "before-first",
             "showByDefault": true
         }
    }
}